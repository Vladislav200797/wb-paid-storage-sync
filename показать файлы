name: WB Paid Storage Daily Sync

on:
  schedule:
    - cron: '5 5 * * *'   # ежедневно 07:05 по Амстердаму (UTC+2 летом)
  workflow_dispatch: {}

jobs:
  run:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Show repo files (debug)
        run: |
          pwd
          ls -la
          echo "---- find up to 3 levels ----"
          find . -maxdepth 3 -type f -print

      - uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install deps
        run: pip install requests supabase==2.6.0

      - name: Daily sync (last 8 days)
        env:
          WB_API_TOKEN: ${{ secrets.WB_API_TOKEN }}
          SUPABASE_URL: ${{ secrets.SUPABASE_URL }}
          SUPABASE_SERVICE_ROLE_KEY: ${{ secrets.SUPABASE_SERVICE_ROLE_KEY }}
        run: python wb_paid_storage_sync.py   sync 8
        # ЕСЛИ файл лежит не в корне, поправь путь выше:
        # run: python scripts/wb_paid_storage_sync.py  sync 8
